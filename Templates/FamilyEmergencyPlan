                        <div>
                          <h4 className="text-lg font-bold text-blue-950 mb-4">Set Reminders</h4>
                          <div className="space-y-3">
                            <button className="w-full flex items-center justify-between p-3 bg-blue-900 text-yellow-500 rounded-lg hover:bg-blue-800 transition-colors">
                              <span>Add to Calendar</span>
                              <Calendar className="w-5 h-5" />
                            </button>
                            <button className="w-full flex items-center justify-between p-3 bg-blue-900 text-yellow-500 rounded-lg hover:bg-blue-800 transition-colors">
                              <span>Email Reminder</span>
                              <Mail className="w-5 h-5" />
                            </button>
                            <button className="w-full flex items-center justify-between p-3 bg-blue-900 text-yellow-500 rounded-lg hover:bg-blue-800 transition-colors">
                              <span>Download Review Checklist</span>
                              <Download className="w-5 h-5" />
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          )}
        </div>
      </section>

      {/* Resources Section */}
      <section className="py-16 px-4 bg-blue-900">
        <div className="max-w-6xl mx-auto">
          <div className="text-center mb-12">
            <h2 className="text-3xl md:text-4xl font-bold text-white mb-4">
              Additional <span className="text-yellow-500">Resources</span>
            </h2>
            <p className="text-xl text-blue-200">
              Helpful links and resources for emergency preparedness
            </p>
          </div>
          
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div className="bg-white rounded-xl p-6 shadow-lg">
              <div className="flex items-center gap-3 mb-4">
                <div className="inline-flex items-center justify-center w-10 h-10 rounded-full bg-yellow-500">
                  <ExternalLink className="w-5 h-5 text-blue-950" />
                </div>
                <h3 className="text-lg font-bold text-blue-950">Government Resources</h3>
              </div>
              <ul className="space-y-2 text-blue-800">
                <li><a href="#" className="text-blue-600 hover:text-blue-800">National Disaster Risk Reduction and Management Council</a></li>
                <li><a href="#" className="text-blue-600 hover:text-blue-800">Local MDRRMO Website</a></li>
                <li><a href="#" className="text-blue-600 hover:text-blue-800">Philippine Institute of Volcanology and Seismology</a></li>
              </ul>
            </div>
            
            <div className="bg-white rounded-xl p-6 shadow-lg">
              <div className="flex items-center gap-3 mb-4">
                <div className="inline-flex items-center justify-center w-10 h-10 rounded-full bg-yellow-500">
                  <Users className="w-5 h-5 text-blue-950" />
                </div>
                <h3 className="text-lg font-bold text-blue-950">Community Resources</h3>
              </div>
              <ul className="space-y-2 text-blue-800">
                <li><a href="#" className="text-blue-600 hover:text-blue-800">Barangay Emergency Response Teams</a></li>
                <li><a href="#" className="text-blue-600 hover:text-blue-800">Community Emergency Plans</a></li>
                <li><a href="#" className="text-blue-600 hover:text-blue-800">Neighborhood Watch Programs</a></li>
              </ul>
            </div>
            
            <div className="bg-white rounded-xl p-6 shadow-lg">
              <div className="flex items-center gap-3 mb-4">
                <div className="inline-flex items-center justify-center w-10 h-10 rounded-full bg-yellow-500">
                  <Shield className="w-5 h-5 text-blue-950" />
                </div>
                <h3 className="text-lg font-bold text-blue-950">Training & Education</h3>
              </div>
              <ul className="space-y-2 text-blue-800">
                <li><a href="#" className="text-blue-600 hover:text-blue-800">First Aid Certification Courses</a></li>
                <li><a href="#" className="text-blue-600 hover:text-blue-800">Emergency Preparedness Workshops</a></li>
                <li><a href="#" className="text-blue-600 hover:text-blue-800">Disaster Risk Reduction Training</a></li>
              </ul>
            </div>
          </div>
        </div>
      </section>
    </div>
  );
};

export default App;