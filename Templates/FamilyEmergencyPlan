import React, { useState } from 'react';
import { 
  Users, 
  Phone, 
  MapPin, 
  FileText, 
  CheckCircle, 
  Home, 
  Shield, 
  Calendar, 
  Download, 
  Printer, 
  User, 
  Baby, 
  Accessibility, 
  Dog, 
  AlertTriangle, 
  Clock, 
  MessageSquare, 
  Mail, 
  ExternalLink,
  Plus,
  Minus,
  Edit3,
  Save,
  Eye,
  EyeOff
} from 'lucide-react';

const App = () => {
  const [activeSection, setActiveSection] = useState('introduction');
  const [familyMembers, setFamilyMembers] = useState([
    { id: 1, name: '', age: '', role: '', phone: '', specialNeeds: '' }
  ]);
  const [emergencyContacts, setEmergencyContacts] = useState([
    { id: 1, name: '', relationship: '', phone: '', address: '' }
  ]);
  const [meetingPoints, setMeetingPoints] = useState([
    { id: 1, location: '', address: '', type: 'home' }
  ]);
  const [showDownloadOptions, setShowDownloadOptions] = useState(false);

  const addFamilyMember = () => {
    setFamilyMembers([...familyMembers, {
      id: Date.now(),
      name: '',
      age: '',
      role: '',
      phone: '',
      specialNeeds: ''
    }]);
  };

  const removeFamilyMember = (id) => {
    if (familyMembers.length > 1) {
      setFamilyMembers(familyMembers.filter(member => member.id !== id));
    }
  };

  const updateFamilyMember = (id, field, value) => {
    setFamilyMembers(familyMembers.map(member => 
      member.id === id ? { ...member, [field]: value } : member
    ));
  };

  const addEmergencyContact = () => {
    setEmergencyContacts([...emergencyContacts, {
      id: Date.now(),
      name: '',
      relationship: '',
      phone: '',
      address: ''
    }]);
  };

  const removeEmergencyContact = (id) => {
    if (emergencyContacts.length > 1) {
      setEmergencyContacts(emergencyContacts.filter(contact => contact.id !== id));
    }
  };

  const updateEmergencyContact = (id, field, value) => {
    setEmergencyContacts(emergencyContacts.map(contact => 
      contact.id === id ? { ...contact, [field]: value } : contact
    ));
  };

  const addMeetingPoint = () => {
    setMeetingPoints([...meetingPoints, {
      id: Date.now(),
      location: '',
      address: '',
      type: 'home'
    }]);
  };

  const removeMeetingPoint = (id) => {
    if (meetingPoints.length > 1) {
      setMeetingPoints(meetingPoints.filter(point => point.id !== id));
    }
  };

  const updateMeetingPoint = (id, field, value) => {
    setMeetingPoints(meetingPoints.map(point => 
      point.id === id ? { ...point, [field]: value } : point
    ));
  };

  const downloadTemplate = (type) => {
    const element = document.createElement('a');
    element.setAttribute('href', 'data:text/plain;charset=utf-8,' + encodeURIComponent(`Family Emergency Plan Template - ${type}`));
    element.setAttribute('download', `family-emergency-plan-${type}.txt`);
    element.style.display = 'none';
    document.body.appendChild(element);
    element.click();
    document.body.removeChild(element);
  };

  const sections = [
    { id: 'introduction', title: 'Introduction', icon: <Shield className="w-5 h-5" /> },
    { id: 'communication', title: 'Communication Plan', icon: <Phone className="w-5 h-5" /> },
    { id: 'evacuation', title: 'Evacuation Routes', icon: <MapPin className="w-5 h-5" /> },
    { id: 'contacts', title: 'Emergency Contacts', icon: <Users className="w-5 h-5" /> },
    { id: 'responsibilities', title: 'Responsibilities', icon: <User className="w-5 h-5" /> },
    { id: 'kit', title: 'Preparedness Kit', icon: <CheckCircle className="w-5 h-5" /> },
    { id: 'safety', title: 'Home Safety', icon: <Home className="w-5 h-5" /> },
    { id: 'training', title: 'Training & Drills', icon: <Calendar className="w-5 h-5" /> },
    { id: 'special', title: 'Special Considerations', icon: <Accessibility className="w-5 h-5" /> },
    { id: 'review', title: 'Updates & Review', icon: <Edit3 className="w-5 h-5" /> }
  ];

  const emergencyKitItems = [
    { category: 'Water & Food', items: ['Water (1 gallon per person per day)', 'Non-perishable food (3-day supply)', 'Manual can opener', 'Disposable plates and utensils'] },
    { category: 'Medical Supplies', items: ['First aid kit', 'Prescription medications', 'Pain relievers', 'Antiseptic wipes'] },
    { category: 'Tools & Supplies', items: ['Flashlight', 'Batteries', 'Whistle', 'Multi-tool'] },
    { category: 'Clothing & Bedding', items: ['Sturdy shoes', 'Warm clothing', 'Rain gear', 'Blankets'] },
    { category: 'Important Documents', items: ['Copies of IDs', 'Insurance papers', 'Bank records', 'Emergency contact list'] },
    { category: 'Miscellaneous', items: ['Cash', 'Emergency blanket', 'Duct tape', 'Plastic sheeting'] }
  ];

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-950 via-blue-900 to-blue-800">
      {/* Hero Section */}
      <section className="relative py-20 px-4">
        <div className="max-w-6xl mx-auto text-center">
          <div className="inline-flex items-center justify-center w-20 h-20 rounded-full bg-yellow-500 mb-6">
            <Shield className="w-10 h-10 text-blue-950" />
          </div>
          <h1 className="text-4xl md:text-6xl font-bold text-white mb-6">
            Family <span className="text-yellow-500">Emergency Plan</span>
          </h1>
          <p className="text-xl text-blue-100 max-w-3xl mx-auto mb-8">
            Create a comprehensive emergency plan to protect your family during disasters. 
            Be prepared, stay informed, and ensure everyone's safety.
          </p>
          
          <div className="flex flex-wrap justify-center gap-4">
            <button 
              onClick={() => setShowDownloadOptions(!showDownloadOptions)}
              className="px-6 py-3 bg-yellow-500 text-blue-950 font-bold rounded-lg hover:bg-yellow-400 transition-colors flex items-center gap-2"
            >
              <Download className="w-4 h-4" />
              Download Templates
            </button>
            <button className="px-6 py-3 bg-blue-900 text-yellow-500 font-bold rounded-lg hover:bg-blue-800 transition-colors flex items-center gap-2">
              <Printer className="w-4 h-4" />
              Print Plan
            </button>
          </div>
          
          {showDownloadOptions && (
            <div className="mt-4 p-4 bg-white bg-opacity-10 backdrop-blur-sm rounded-lg">
              <div className="grid grid-cols-1 md:grid-cols-3 gap-3">
                <button 
                  onClick={() => downloadTemplate('communication')}
                  className="px-4 py-2 bg-blue-900 text-yellow-500 rounded-lg hover:bg-blue-800 transition-colors"
                >
                  Communication Plan
                </button>
                <button 
                  onClick={() => downloadTemplate('contacts')}
                  className="px-4 py-2 bg-blue-900 text-yellow-500 rounded-lg hover:bg-blue-800 transition-colors"
                >
                  Contact List
                </button>
                <button 
                  onClick={() => downloadTemplate('kit')}
                  className="px-4 py-2 bg-blue-900 text-yellow-500 rounded-lg hover:bg-blue-800 transition-colors"
                >
                  Kit Checklist
                </button>
              </div>
            </div>
          )}
        </div>
      </section>

      {/* Navigation */}
      <section className="py-8 px-4 bg-blue-900">
        <div className="max-w-6xl mx-auto">
          <div className="flex flex-wrap justify-center gap-2">
            {sections.map((section) => (
              <button
                key={section.id}
                onClick={() => setActiveSection(section.id)}
                className={`flex items-center gap-2 px-4 py-2 rounded-full transition-all duration-300 ${
                  activeSection === section.id
                    ? 'bg-yellow-500 text-blue-950 font-bold shadow-lg'
                    : 'bg-white bg-opacity-10 text-white hover:bg-opacity-20'
                }`}
              >
                {section.icon}
                <span className="text-sm font-medium">{section.title}</span>
              </button>
            ))}
          </div>
        </div>
      </section>

      {/* Main Content */}
      <section className="py-16 px-4">
        <div className="max-w-6xl mx-auto">
          {/* Introduction Section */}
          {activeSection === 'introduction' && (
            <div className="bg-white rounded-2xl shadow-2xl overflow-hidden">
              <div className="bg-gradient-to-r from-blue-950 to-blue-900 p-6">
                <div className="flex items-center gap-3">
                  <Shield className="text-yellow-500" size={32} />
                  <h2 className="text-3xl font-bold text-yellow-500">Introduction to Family Emergency Plans</h2>
                </div>
              </div>
              <div className="p-8">
                <div className="prose max-w-none">
                  <p className="text-lg text-blue-900 mb-6">
                    A family emergency plan is a written document that outlines how your family will respond to different types of emergencies. 
                    It ensures that everyone knows what to do, where to go, and how to communicate during a crisis.
                  </p>
                  
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <div className="bg-blue-50 p-6 rounded-lg">
                      <h3 className="text-xl font-bold text-blue-950 mb-3">Why It's Important</h3>
                      <ul className="space-y-2 text-blue-800">
                        <li className="flex items-start gap-2">
                          <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                          Ensures family safety during emergencies
                        </li>
                        <li className="flex items-start gap-2">
                          <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                          Reduces panic and confusion
                        </li>
                        <li className="flex items-start gap-2">
                          <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                          Helps reunite family members quickly
                        </li>
                        <li className="flex items-start gap-2">
                          <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                          Provides clear communication protocols
                        </li>
                      </ul>
                    </div>
                    
                    <div className="bg-yellow-50 p-6 rounded-lg">
                      <h3 className="text-xl font-bold text-blue-950 mb-3">Key Components</h3>
                      <ul className="space-y-2 text-blue-800">
                        <li className="flex items-start gap-2">
                          <Users className="w-5 h-5 text-blue-950 mt-0.5 flex-shrink-0" />
                          Family communication strategy
                        </li>
                        <li className="flex items-start gap-2">
                          <MapPin className="w-5 h-5 text-blue-950 mt-0.5 flex-shrink-0" />
                          Evacuation routes and meeting points
                        </li>
                        <li className="flex items-start gap-2">
                          <CheckCircle className="w-5 h-5 text-blue-950 mt-0.5 flex-shrink-0" />
                          Emergency contact information
                        </li>
                        <li className="flex items-start gap-2">
                          <Home className="w-5 h-5 text-blue-950 mt-0.5 flex-shrink-0" />
                          Home safety measures
                        </li>
                      </ul>
                    </div>
                  </div>
                  
                  <div className="bg-gradient-to-r from-blue-900 to-blue-800 rounded-lg p-6 text-white">
                    <h3 className="text-xl font-bold mb-3">Getting Started</h3>
                    <p className="mb-4">
                      Creating a family emergency plan doesn't have to be complicated. Start by gathering your family together 
                      and discussing potential emergencies that could affect your area. Then, work through each section of this 
                      guide to build a comprehensive plan tailored to your family's needs.
                    </p>
                    <p>
                      Remember to review and practice your plan regularly to ensure everyone knows their role and responsibilities.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          )}

          {/* Communication Plan Section */}
          {activeSection === 'communication' && (
            <div className="bg-white rounded-2xl shadow-2xl overflow-hidden">
              <div className="bg-gradient-to-r from-blue-950 to-blue-900 p-6">
                <div className="flex items-center gap-3">
                  <Phone className="text-yellow-500" size={32} />
                  <h2 className="text-3xl font-bold text-yellow-500">Family Communication Plan</h2>
                </div>
              </div>
              <div className="p-8">
                <div className="prose max-w-none">
                  <p className="text-lg text-blue-900 mb-6">
                    Establishing a clear communication strategy is crucial for keeping your family connected during emergencies. 
                    This plan should include multiple methods of communication and backup options.
                  </p>
                  
                  <div className="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
                    <div>
                      <h3 className="text-2xl font-bold text-blue-950 mb-4">Designating an Out-of-Area Contact</h3>
                      <div className="bg-blue-50 p-6 rounded-lg">
                        <ul className="space-y-3 text-blue-800">
                          <li className="flex items-start gap-3">
                            <Phone className="w-5 h-5 text-blue-950 mt-0.5 flex-shrink-0" />
                            <div>
                              <p className="font-semibold">Choose a reliable contact person</p>
                              <p>Select someone outside your immediate area who can serve as a central point of contact.</p>
                            </div>
                          </li>
                          <li className="flex items-start gap-3">
                            <Mail className="w-5 h-5 text-blue-950 mt-0.5 flex-shrink-0" />
                            <div>
                              <p className="font-semibold">Share contact information</p>
                              <p>Ensure all family members have the contact person's phone number and email address.</p>
                            </div>
                          </li>
                          <li className="flex items-start gap-3">
                            <MessageSquare className="w-5 h-5 text-blue-950 mt-0.5 flex-shrink-0" />
                            <div>
                              <p className="font-semibold">Establish communication protocols</p>
                              <p>Decide on a specific message format and regular check-in times.</p>
                            </div>
                          </li>
                        </ul>
                      </div>
                    </div>
                    
                    <div>
                      <h3 className="text-2xl font-bold text-blue-950 mb-4">Meeting Places</h3>
                      <div className="bg-yellow-50 p-6 rounded-lg">
                        <ul className="space-y-3 text-blue-800">
                          <li className="flex items-start gap-3">
                            <Home className="w-5 h-5 text-blue-950 mt-0.5 flex-shrink-0" />
                            <div>
                              <p className="font-semibold">Local meeting place</p>
                              <p>Choose a safe location near your home where family members can meet if separated.</p>
                            </div>
                          </li>
                          <li className="flex items-start gap-3">
                            <MapPin className="w-5 h-5 text-blue-950 mt-0.5 flex-shrink-0" />
                            <div>
                              <p className="font-semibold">Out-of-town meeting place</p>
                              <p>Select a location outside your immediate area where family members can reunite.</p>
                            </div>
                          </li>
                          <li className="flex items-start gap-3">
                            <Users className="w-5 h-5 text-blue-950 mt-0.5 flex-shrink-0" />
                            <div>
                              <p className="font-semibold">Workplace meeting place</p>
                              <p>Identify a safe location near your workplace or children's school.</p>
                            </div>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                  
                  <div className="bg-gradient-to-r from-blue-900 to-blue-800 rounded-lg p-6 text-white mb-8">
                    <h3 className="text-xl font-bold mb-4">Backup Communication Methods</h3>
                    <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                      <div className="bg-blue-800 p-4 rounded-lg">
                        <h4 className="font-bold mb-2">Text Messaging</h4>
                        <p className="text-sm">Often works when voice calls fail</p>
                      </div>
                      <div className="bg-blue-800 p-4 rounded-lg">
                        <h4 className="font-bold mb-2">Social Media</h4>
                        <p className="text-sm">Use Facebook, Twitter for updates</p>
                      </div>
                      <div className="bg-blue-800 p-4 rounded-lg">
                        <h4 className="font-bold mb-2">Public Message Boards</h4>
                        <p className="text-sm">Check local community boards</p>
                      </div>
                    </div>
                  </div>
                  
                  <div className="border-t border-gray-200 pt-8">
                    <h3 className="text-2xl font-bold text-blue-950 mb-6">Customize Your Communication Plan</h3>
                    <div className="bg-white border-2 border-blue-200 rounded-lg p-6">
                      <h4 className="text-lg font-bold text-blue-950 mb-4">Add Family Members</h4>
                      {familyMembers.map((member, index) => (
                        <div key={member.id} className="grid grid-cols-1 md:grid-cols-5 gap-4 mb-4 p-4 bg-blue-50 rounded-lg">
                          <div>
                            <label className="block text-sm font-medium text-blue-900 mb-1">Name</label>
                            <input
                              type="text"
                              value={member.name}
                              onChange={(e) => updateFamilyMember(member.id, 'name', e.target.value)}
                              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                              placeholder="Full name"
                            />
                          </div>
                          <div>
                            <label className="block text-sm font-medium text-blue-900 mb-1">Age</label>
                            <input
                              type="number"
                              value={member.age}
                              onChange={(e) => updateFamilyMember(member.id, 'age', e.target.value)}
                              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                              placeholder="Age"
                            />
                          </div>
                          <div>
                            <label className="block text-sm font-medium text-blue-900 mb-1">Role</label>
                            <input
                              type="text"
                              value={member.role}
                              onChange={(e) => updateFamilyMember(member.id, 'role', e.target.value)}
                              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                              placeholder="Role in plan"
                            />
                          </div>
                          <div>
                            <label className="block text-sm font-medium text-blue-900 mb-1">Phone</label>
                            <input
                              type="tel"
                              value={member.phone}
                              onChange={(e) => updateFamilyMember(member.id, 'phone', e.target.value)}
                              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                              placeholder="Phone number"
                            />
                          </div>
                          <div className="flex items-end">
                            <button
                              onClick={() => removeFamilyMember(member.id)}
                              className="px-3 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition-colors"
                            >
                              <Minus className="w-4 h-4" />
                            </button>
                          </div>
                        </div>
                      ))}
                      <button
                        onClick={addFamilyMember}
                        className="flex items-center gap-2 px-4 py-2 bg-blue-900 text-yellow-500 rounded-md hover:bg-blue-800 transition-colors"
                      >
                        <Plus className="w-4 h-4" />
                        Add Family Member
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          )}

          {/* Evacuation Routes Section */}
          {activeSection === 'evacuation' && (
            <div className="bg-white rounded-2xl shadow-2xl overflow-hidden">
              <div className="bg-gradient-to-r from-blue-950 to-blue-900 p-6">
                <div className="flex items-center gap-3">
                  <MapPin className="text-yellow-500" size={32} />
                  <h2 className="text-3xl font-bold text-yellow-500">Evacuation Routes & Meeting Points</h2>
                </div>
              </div>
              <div className="p-8">
                <div className="prose max-w-none">
                  <p className="text-lg text-blue-900 mb-6">
                    Planning evacuation routes and identifying meeting points is essential for ensuring your family's safety 
                    during emergencies. Having multiple options and clear instructions can make the difference in a crisis.
                  </p>
                  
                  <div className="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
                    <div className="bg-blue-50 p-6 rounded-lg">
                      <h3 className="text-xl font-bold text-blue-950 mb-4">Home Evacuation Routes</h3>
                      <ul className="space-y-3 text-blue-800">
                        <li className="flex items-start gap-3">
                          <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                          <div>
                            <p className="font-semibold">Primary route</p>
                            <p>Identify the main exit from your home (front door, back door).</p>
                          </div>
                        </li>
                        <li className="flex items-start gap-3">
                          <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                          <div>
                            <p className="font-semibold">Secondary route</p>
                            <p>Plan an alternative exit in case the primary route is blocked.</p>
                          </div>
                        </li>
                        <li className="flex items-start gap-3">
                          <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                          <div>
                            <p className="font-semibold">Escape routes from each room</p>
                            <p>Ensure every family member knows how to exit from their location.</p>
                          </div>
                        </li>
                      </ul>
                    </div>
                    
                    <div className="bg-yellow-50 p-6 rounded-lg">
                      <h3 className="text-xl font-bold text-blue-950 mb-4">Workplace/School Routes</h3>
                      <ul className="space-y-3 text-blue-800">
                        <li className="flex items-start gap-3">
                          <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                          <div>
                            <p className="font-semibold">Multiple exit points</p>
                            <p>Identify all available exits from your workplace or children's school.</p>
                          </div>
                        </li>
                        <li className="flex items-start gap-3">
                          <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                          <div>
                            <p className="font-semibold">Assembly areas</p>
                            <p>Know where to gather after evacuation from buildings.</p>
                          </div>
                        </li>
                        <li className="flex items-start gap-3">
                          <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                          <div>
                            <p className="font-semibold">Emergency procedures</p>
                            <p>Understand the established protocols for your workplace/school.</p>
                          </div>
                        </li>
                      </ul>
                    </div>
                  </div>
                  
                  <div className="bg-gradient-to-r from-blue-900 to-blue-800 rounded-lg p-6 text-white mb-8">
                    <h3 className="text-xl font-bold mb-4">Meeting Points</h3>
                    <p className="mb-4">
                      Establish clear meeting points where family members can reunite if separated during an emergency.
                    </p>
                    <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                      <div className="bg-blue-800 p-4 rounded-lg">
                        <h4 className="font-bold mb-2">Immediate Area</h4>
                        <p className="text-sm">A safe spot near your home</p>
                      </div>
                      <div className="bg-blue-800 p-4 rounded-lg">
                        <h4 className="font-bold mb-2">Neighborhood</h4>
                        <p className="text-sm">A designated community meeting point</p>
                      </div>
                      <div className="bg-blue-800 p-4 rounded-lg">
                        <h4 className="font-bold mb-2">Out of Town</h4>
                        <p className="text-sm">A location outside your immediate area</p>
                      </div>
                    </div>
                  </div>
                  
                  <div className="border-t border-gray-200 pt-8">
                    <h3 className="text-2xl font-bold text-blue-950 mb-6">Define Your Meeting Points</h3>
                    <div className="bg-white border-2 border-blue-200 rounded-lg p-6">
                      {meetingPoints.map((point, index) => (
                        <div key={point.id} className="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4 p-4 bg-blue-50 rounded-lg">
                          <div>
                            <label className="block text-sm font-medium text-blue-900 mb-1">Location Name</label>
                            <input
                              type="text"
                              value={point.location}
                              onChange={(e) => updateMeetingPoint(point.id, 'location', e.target.value)}
                              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                              placeholder="Location name"
                            />
                          </div>
                          <div>
                            <label className="block text-sm font-medium text-blue-900 mb-1">Address</label>
                            <input
                              type="text"
                              value={point.address}
                              onChange={(e) => updateMeetingPoint(point.id, 'address', e.target.value)}
                              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                              placeholder="Full address"
                            />
                          </div>
                          <div>
                            <label className="block text-sm font-medium text-blue-900 mb-1">Type</label>
                            <select
                              value={point.type}
                              onChange={(e) => updateMeetingPoint(point.id, 'type', e.target.value)}
                              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                            >
                              <option value="home">Home Area</option>
                              <option value="neighborhood">Neighborhood</option>
                              <option value="outoftown">Out of Town</option>
                              <option value="workplace">Workplace/School</option>
                            </select>
                          </div>
                          <div className="flex items-end">
                            <button
                              onClick={() => removeMeetingPoint(point.id)}
                              className="px-3 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition-colors"
                            >
                              <Minus className="w-4 h-4" />
                            </button>
                          </div>
                        </div>
                      ))}
                      <button
                        onClick={addMeetingPoint}
                        className="flex items-center gap-2 px-4 py-2 bg-blue-900 text-yellow-500 rounded-md hover:bg-blue-800 transition-colors"
                      >
                        <Plus className="w-4 h-4" />
                        Add Meeting Point
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          )}

          {/* Emergency Contacts Section */}
          {activeSection === 'contacts' && (
            <div className="bg-white rounded-2xl shadow-2xl overflow-hidden">
              <div className="bg-gradient-to-r from-blue-950 to-blue-900 p-6">
                <div className="flex items-center gap-3">
                  <Users className="text-yellow-500" size={32} />
                  <h2 className="text-3xl font-bold text-yellow-500">Emergency Contacts List</h2>
                </div>
              </div>
              <div className="p-8">
                <div className="prose max-w-none">
                  <p className="text-lg text-blue-900 mb-6">
                    Maintaining an up-to-date emergency contacts list is crucial for effective communication during disasters. 
                    Include both local and out-of-area contacts who can provide assistance or serve as communication hubs.
                  </p>
                  
                  <div className="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
                    <div className="bg-blue-50 p-6 rounded-lg">
                      <h3 className="text-xl font-bold text-blue-950 mb-4">Local Emergency Services</h3>
                      <ul className="space-y-3 text-blue-800">
